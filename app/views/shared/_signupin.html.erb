<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="login-wrap">
  <div class="login-html">
    <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
    <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
    <div class="login-form">
      <div class="sign-in-htm">
        <div class="group">
          <label for="user" class="label">Email</label>
           <%= f.input :email,
                required: false,
                autofocus: true,
                label: false,
                input_html: { autocomplete: "email" } %>
        </div>
        <div class="group">
          <label for="pass" class="label">Password</label>
            <%= f.input :password,
                required: false,
                label: false,
                input_html: { autocomplete: "current-password" } %>
        </div>
        <div class="group">
          <label class="label"> Keep me Signed in</label>
           <%= f.input :remember_me,label: false, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="group">
          <%= f.button :submit, "Log in", class:"button", style:"margin-top: 50px;" %>
        </div>
        <div class="hr"></div>
        <div class="foot-lnk">
          <%= link_to "Forgot Password",edit_user_password_path, style:"color: gray;"%>
        </div>
      </div>
      <% end %>


<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
      <div class="sign-up-htm">
        <div class="group">
          <label for="user" class="label">Username</label>
                      <%= f.input :username,
                required: true,
                autofocus: true,
                 label: false,
                input_html: { autocomplete: "username" }%>
        </div>
        <div class="group">
          <label for="pass" class="label">Password</label>
          <%= f.input :password,
                required: true,
                label: false,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
        </div>
        <div class="group">
          <label for="pass" class="label">Repeat Password</label>
          <%= f.input :password_confirmation,
                required: true,
                label: false,
                input_html: { autocomplete: "new-password" } %>
        </div>
        <div class="group">
          <label for="pass" class="label">Email Address</label>
              <%= f.input :email,
                required: true,
                autofocus: true,
                label:false,
                input_html: { autocomplete: "email" }%>
        </div>
        <div class="group">
          <%= f.button :submit,  "Sign up", label: false,class: "button"%>
        </div>

  <% end %>

