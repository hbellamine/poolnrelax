<header>
  <div class="overlay"></div>
  <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
    <source src="https://res.cloudinary.com/dnwnxu6xb/video/upload/v1582830560/ezgif.com-crop_hi7gb0.mp4" type="video/mp4">
  </video>
  <div class="container h-100" style="box-shadow: 2px 2px 5px gray;">
    <div class="d-flex h-100 text-center align-items-center">

      <div class="w-100 text-white">

        <h1 class="display-3">🐶Heal yourself</h1>
        <p class="lead mb-0">Book a Puppy 🐶</p>
         <div class="d-flex justify-content-center" style="margin-top: 20px;">
     <%= form_tag(puppies_path, :method => "get") do %>

    <%= search_field_tag :search, params[:search], placeholder: "Search for the cutest puppy", class: "form-control", style:"width:300px;" %>
    <%end%>
      <%= button_tag "Search", :style => "background-color: #FF5A5F", :class => 'btn btn-primary glyphicon glyphicon-search',:name => nil%>

  </div>

      </div>
    </div>
  </div>
