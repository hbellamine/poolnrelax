<%= render 'shared/navbar' %>

<div
  id="map"
  class ="animated bounceInRight delay-15s"
  style="height: 300px;
  margin-top: 20px;
  border-radius: 10px"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<%= render  'shared/bookingnew' %>

<div class =" d-flex justify-content-center" style="background-color:rgba(94, 196, 243, 0.3); margin-top:40px;">
<%= render  'shared/puppyplay' %>
<h3 style="color: purple;text-align: center;">Book and Relax üç∏</h3>
</div>

<div id="reviews" style="background-color: white; margin-top: 20px; border-radius: 6px; box-shadow: 0px 1px 1px lightgray; margin-bottom: 5px;">

  <div id="reviews-container">
    <% @reviews.each do |review| %>
      <%= render 'reviews/show', review: review %>
    <% end %>
  </div>

  <div >
    <div class='review-form' style="border-style: none; box-shadow: 2px 2px 3px 2px lightgray; border-radius: 10px; margin-right:15px; margin-bottom: 20px;">
      <h1 class='create-review' style="color:purple;">Add a new review for <%= @puppy.name %></h1>

      <%= render  'reviews/form', puppy: @puppy, review: Review.new %>

    </div>
  </div>
</div>

<%= render 'shared/footer' %>

