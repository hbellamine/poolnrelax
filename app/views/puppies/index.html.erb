<div class="grid-container">

  <% @puppies.each do |puppie| %>
  <div class="card-trip">
    <%=link_to puppy_path(puppie), class: "img-rounded" do %>
      <% if puppie.photo.attached? %>
        <%= cl_image_tag puppie.photo.key, height: 300, width: 400, crop: :fill, class: "img-rounded" %>
      <% end %>
      <h1 id="puppiename"><%= puppie.name %>
        <%= link_to puppy_path(puppie.id), method: :delete do %>
          <i class="fas fa-trash-alt bin"></i>
        <%end%>
      </h1>
    <% end %>
  </div>
  <%end%>
</div>
